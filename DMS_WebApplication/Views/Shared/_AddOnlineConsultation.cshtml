<script>
    function OCDAvalvalidate(el) {
        var remember = document.getElementById("OCDcheckbox" + el);
        if (remember.checked) {
            document.getElementById("OCDlabel" + el).innerText = "Not Available";
            document.getElementsByClassName("OCDtime" + el)[0].disabled = true;
            document.getElementsByClassName("OCDtime" + el)[1].disabled = true;
            document.getElementById("OCDlabel" + el).style.color = "#d9534f";
        } else {
            document.getElementById("OCDlabel" + el).innerText = "Available";
            document.getElementsByClassName("OCDtime" + el)[0].disabled = false;
            document.getElementsByClassName("OCDtime" + el)[1].disabled = false;
            document.getElementById("OCDlabel" + el).style.color = "#28a745";

        }
    }
</script>
