<script>
    function AvalvalidateUO(el) {
        var remember = document.getElementById("checkboxUO" + el);
        if (remember.checked) {
            document.getElementById("labelUO" + el).innerText = "Not Available";
            document.getElementsByClassName("timeUO" + el)[0].disabled = true;
            document.getElementsByClassName("timeUO" + el)[1].disabled = true;
            document.getElementById("labelUO" + el).style.color = "#d9534f";
        } else {
            document.getElementById("labelUO" + el).innerText = "Available";
            document.getElementsByClassName("timeUO" + el)[0].disabled = false;
            document.getElementsByClassName("timeUO" + el)[1].disabled = false;
            document.getElementById("labelUO" + el).style.color = "#28a745";

        }
    }
</script>

