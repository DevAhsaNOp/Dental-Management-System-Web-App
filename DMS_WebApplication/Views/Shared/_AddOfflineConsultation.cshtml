<script>
    function Avalvalidate(el) {
        var remember = document.getElementById("checkbox" + el);
        if (remember.checked) {
            document.getElementById("label" + el).innerText = "Not Available";
            document.getElementsByClassName("time" + el)[0].disabled = true;
            document.getElementsByClassName("time" + el)[1].disabled = true;
            document.getElementById("label" + el).style.color = "#d9534f";
        } else {
            document.getElementById("label" + el).innerText = "Available";
            document.getElementsByClassName("time" + el)[0].disabled = false;
            document.getElementsByClassName("time" + el)[1].disabled = false;
            document.getElementById("label" + el).style.color = "#28a745";

        }
    }

    function chkDoes() {
        var remember = document.getElementById("chkDoes1");
        if (remember.checked) {
            document.getElementById("labelDoes1").innerText = "Not Apply On Me";
            document.getElementById("labelDoes1").style.color = "#d9534f";
            $("#OFCDDiv").hide();
            $("#btnOFCD").prop('disabled', true);
            var inputs = document.getElementsByClassName("Isdisabled");
            for (var i = 0; i < inputs.length; i++) {
                inputs[i].disabled = true;
            }
        } else {
            document.getElementById("labelDoes1").innerText = "It Apply On Me";
            document.getElementById("labelDoes1").style.color = "#28a745";
            $("#OFCDDiv").show();
            $("#btnOFCD").prop('disabled',false);
            var inputs = document.getElementsByClassName("Isdisabled");
            for (var i = 0; i < inputs.length; i++) {
                inputs[i].disabled = false;
            }
        }
    }

    $(document).ready(function () {
        $('#CityD').hide();
        $('#AreaD').hide();
        $('#TxtOTP').hide();
        $('#AddressD').hide();

        $("#State").change(function () {
            var StateId = $(this).val();
            $(".loader").show();
            $.ajax({
                type: "post",
                url: "/Account/GetCityList?StateId=" + StateId,
                contentType: "html",
                success: function (response) {
                    $("#City").empty();
                    $("#Area").empty();
                    $('#AreaD').hide();
                    $('#AddressD').hide();
                    $("#City").append(response);
                    $('#CityD').show();
                    $(".loader").hide();
                }
            })
        })

        $("#City").change(function () {
            var CityId = $(this).val();
            $(".loader").show();
            $.ajax({
                type: "post",
                url: "/Account/GetZoneList?CityId=" + CityId,
                contentType: "html",
                success: function (response) {
                    $("#Area").empty();
                    $("#Area").append(response);
                    $('#AreaD').show();
                    $(".loader").hide();
                }
            })
        })

        $("#Area").change(function () {
            var AreaId = $(this).val();
            $(".loader").show();
            if (AreaId > 0) {
                $('#AddressD').show();
                $(".loader").hide();
            }
        })
    })
</script>